# ------------------------------------------------------------
# Global aliases
# ------------------------------------------------------------

# To show and execute commands in a didactic mode
show_exec() {
    echo "[CMD] $@"
    eval "$@"
}
alias show-exec="show_exec"
alias sx="show_exec"

# Show dir facility
alias ls='ls --color=tty'
alias ll='ls -al'

# Tool to test ports
test_port(){
    if [ $# -eq 2 ]; then
        nc -z -v -w5 $1 $2
    else
        echo "Usage: test-port HOST PORT"
    fi
}
alias test-port="test_port"


# ------------------------------------------------------------
# Docker compose aliases
# ------------------------------------------------------------

# Compose up in daemon mode
dc_upd(){
    sx docker-compose up -d
}

# Deep restart with images cleaning and pulling
dc_init(){
    sx docker-compose stop
    sx docker-compose rm -f
    sx docker-compose pull
    sx docker-compose up -d
}

# Deep restart with image cleaning
dc_reset(){
    sx docker-compose stop
    sx docker-compose rm -f
    sx docker-compose up -d
}

# Shows or changes compose app prefix
dc_prefix(){
    if [ $# -eq 0 ]; then
        echo $COMPOSE_PROJECT_NAME
    else
        export COMPOSE_PROJECT_NAME=$1
    fi
}

# Show compose usage + information about custom commands
dc_custom_usage(){
    echo
    echo "dc = docker-compose alias with enhancements."
    echo
    docker-compose 2>&1 >/dev/null | sed 's/docker-compose/dc/g'
    echo
    echo "Custom dc commands:"
    echo "  upd                Compose up in daemon mode"
    echo "  init               Deep restart with images cleaning and pulling"
    echo "  reset              Deep restart with image cleaning"
    echo "  prefix             Shows or changes compose app prefix"
    echo
    return 1
}

# Docker compose alias plus new features for it
dc(){
    case "${1}" in
        upd) dc_upd
            ;;
        init) dc_init
            ;;
        reset) dc_reset
            ;;
        prefix) dc_prefix "$2"
            ;;
        "") dc_custom_usage
            ;;
        *) sx docker-compose "$@"
            ;;
    esac
}

# ------------------------------------------------------------
# Docker aliases
# ------------------------------------------------------------

# Docker cmd shortener
alias dk="docker"

# Show ip of a docker container
alias dk-ip="docker inspect --format '{{ .NetworkSettings.IPAddress }}' $1"

# Kill all running containers.
alias dk-killall='docker kill $(docker ps -q)'

# Delete all stopped containers.
alias dk-cleanc='printf "\n>>> Deleting stopped containers\n\n" && docker rm $(docker ps -a -q)'

# Delete all untagged images.
alias dk-cleani='printf "\n>>> Deleting untagged images\n\n" && docker rmi $(docker images -q -f dangling=true)'

# Delete all stopped containers and untagged images.
alias dk-clean='dk-cleanc || true && dk-cleani'

# Get a ssh inside a container
dk_sh() {
    if [ $# -eq 1 ]; then
        sx docker exec -ti $1 /bin/sh
    else
        echo "Usage: dk-sh CONTAINER"
        echo ""
        echo "Starts a shell inside a container."
    fi
}
alias dk-sh='dk_sh'

# Get a shell in a container started from the specified image
dk_sh_img() {
    if [ $# -eq 1 ]; then
        sx docker run -it --rm --entrypoint="/bin/sh" $1
    else
        echo "Usage: dk-sh-img IMAGE"
        echo ""
        echo "Runs an image as a container and start a shell inside."
    fi
}
alias dk-sh-img='dk_sh_img'

# See files tree in a container
dk_ls() {
    if [ $# -eq 2 ]; then
        sx docker exec -ti $1 /bin/ls -l $2
    else
        echo "Usage: dk-ls CONTAINER PATH"
        echo ""
        echo "Outputs directory content from inside a container."
    fi
}
alias dk-ls='dk_ls'

# See files content inside a container
dk_cat() {
    if [ $# -eq 2 ]; then
        sx docker exec -ti $1 /bin/cat $2
    else
        echo "Usage: dk-cat CONTAINER PATH"
        echo ""
        echo "Outputs file content from inside a container."
    fi
}
alias dk-cat='dk_cat'

# Edit files content inside a container
dk_vi() {
    if [ $# -eq 2 ]; then
        sx docker exec -ti $1 /bin/vi $2
    else
        echo "Usage: dk-vi CONTAINER PATH"
        echo ""
        echo "Edits file content from inside a container."
    fi
}
alias dk-vi='dk_vi'

# Misc
alias dk-flogs="docker logs -f $1"
